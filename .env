NODE_ENV=dev
# NODE_ENV=production
TZ=Europe/Paris
HOST=localhost

HOMEPAGE_LOADBALENCER_SERVER_PORT=3000
HOMEPAGE_ALLOWED_HOSTS=homepage.${HOST},homepage.${HOST}:80,${HOST},${HOST}:80,127.0.0.1

# Docker Registry
REGISTRY_USERNAME=admin
REGISTRY_PASSWORD=changeme
REGISTRY_URL=registry.${HOST}
REGISTRY_LOADBALENCER_SERVER_PORT=5000
REGISTRY_HTTP_ENABLED=true
REGISTRY_HTTP_ADDR=:5000
REGISTRY_STORAGE_DELETE_ENABLED=true
REGISTRY_STORAGE=filesystem
REGISTRY_STORAGE_FILESYSTEM_ROOTDIRECTORY=/var/lib/registry

MINIO_URL=minio.${HOST}
MINIO_PATH_LOADBALENCER_SERVER_PORT=9000
MINIO_STORAGE_LOADBALENCER_SERVER_PORT=9001
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=adminadmin123
MINIO_PROMETHEUS_AUTH_TYPE=public

# Redis
REDIS_PASSWORD=changeme

# MariaDB - ProxySQL
PROXYSQL_ADMIN_USER=admin
PROXYSQL_ADMIN_PASSWORD=admin
MYSQL_USER=monitor
MYSQL_PASSWORD=monitor

# MariaDB - Galera
MARIADB_USER=user
MARIADB_PASSWORD=user
MARIADB_ROOT_PASSWORD=root
SST_USER=sst_user
SST_PASSWORD=sst_password

# MariaDb - Backup 
MARIADB_USER_BACKUP=user_backup
MARIADB_PASSWORD_BACKUP=user_backup
MARIADB_ROOT_PASSWORD_BACKUP=root
# Replication configuration (via MaxScale Binlog Server)
MARIADB_BACKUP_PRIMARY_HOST=maxscale
MARIADB_BACKUP_PRIMARY_PORT=3306
MARIADB_BACKUP_REPL_USER=repl
MARIADB_BACKUP_REPL_PASSWORD=replpass

# Keycloak
KC_URL=auth.${HOST}
KC_URL_INTERNAL=keycloak:8080
KC_LOADBALENCER_SERVER_PORT=8080
KC_HTTP_ENABLED=true
# Keycloak Database 
KC_DB_TYPE=postgres
KC_DB_NAME=keycloak
KC_DB_USERNAME=keycloak
KC_DB_PASSWORD=keycloakpass
KC_DB_URL= jdbc:postgresql://postgres-keycloak:5432/${KC_DB_NAME}
# Admin bootstrap (dev only; move to secrets later)
# KC_BOOTSTRAP_ADMIN_USERNAME= admin
# KC_BOOTSTRAP_ADMIN_PASSWORD= admin
KC_ADMIN_USERNAME=admin
KC_ADMIN_PASSWORD=admin
# Reverse proxy awareness
KC_PROXY=edge
KC_HOSTNAME_STRICT=false
# KC_HOSTNAME_PORT= 8080
KC_METRICS_ENABLED=true
KC_HEALTH_ENABLED= true
# OpenTelemetry traces -> OTel Collector -> Tempo
KC_FEATURES=opentelemetry
KC_OPENTELEMETRY_ENDPOINT=http://otel-collector:4317
KC_OPENTELEMETRY_PROTOCOL=grpc
KC_LOG_LEVEL=info
KC_REALM=internal
KC_CLIENT_ID_JENKINS=jenkins
KC_SECRET_JENKINS=pbVa7IZUsjqck93mraCiapBLNarCNrHW
KC_CLIENT_ID_JENKINS_AUTOMATION=jenkins-automation
KC_SECRET_JENKINS_AUTOMATION=jwzH52S9i9qlT15ju8wYKNSUWYVC1W2O
# Grafana
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
GF_LOADBALENCER_SERVER_PORT=3000

# Postgres_Exporter
POSTGRES_EXPORTER_DATA_SOURCE_NAME=postgresql://postgres:postgres@haproxy:5432/postgres

haproxy_scrape_uri=http://haproxy:7000/;csv

JENKINS_URL=jenkins.${HOST}
# Web UI port on the host
JENKINS_HTTP_PORT=8080
# Inbound agents port mapping
JENKINS_AGENT_PORT=50000
JENKINS_SSH_PORT=2222
# Extra Java options (example: set timezone at JVM level)
JAVA_OPTS=-Duser.timezone=Europe/Paris -Djenkins.install.runSetupWizard=false
# Extra Jenkins options (usually leave empty)
# JENKINS_OPTS=
OIDC_CLIENT_ID=${KC_CLIENT_ID_JENKINS}
OIDC_CLIENT_SECRET=${KC_SECRET_JENKINS}