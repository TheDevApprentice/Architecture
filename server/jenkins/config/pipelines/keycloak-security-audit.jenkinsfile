/**
 * Keycloak Security Audit Pipeline
 * 
 * Automated security audit with detailed reporting
 * Scheduled to run daily (cron: @daily or 0 2 * * *)
 */

// Load Keycloak library functions
def keycloakAuth
def keycloakUser
def keycloakGroup
def keycloakClient
def keycloakAudit

pipeline {
    agent any
    
    parameters {
        string(
            name: 'REALM',
            defaultValue: 'internal',
            description: 'Keycloak realm to audit'
        )
        string(
            name: 'INACTIVE_DAYS_THRESHOLD',
            defaultValue: '90',
            description: 'Days of inactivity to flag users'
        )
        string(
            name: 'UNVERIFIED_EMAIL_THRESHOLD',
            defaultValue: '20',
            description: 'Alert threshold for unverified emails'
        )
        string(
            name: 'INACTIVE_USERS_THRESHOLD',
            defaultValue: '50',
            description: 'Alert threshold for inactive users'
        )
        choice(
            name: 'REPORT_FORMAT',
            choices: ['HTML', 'JSON', 'CSV', 'ALL'],
            description: 'Output report format'
        )
        booleanParam(
            name: 'SEND_EMAIL_ALERTS',
            defaultValue: false,
            description: 'Send email alerts if critical issues found'
        )
    }
    
    environment {
        KC_URL_INTERNAL = "${KC_URL_INTERNAL}"
        KC_CLIENT_ID = "${KC_CLIENT_ID_JENKINS_AUTOMATION}"
        KC_CLIENT_SECRET = "${KC_SECRET_JENKINS_AUTOMATION}"
        REPORT_DIR = "${WORKSPACE}/reports"
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '30'))
    }
    
    stages {
        stage('Load Keycloak Library') {
            steps {
                script {
                    keycloakAuth = load '/var/jenkins_home/workflow-libs/keycloak-lib/vars/keycloakAuth.groovy'
                    keycloakUser = load '/var/jenkins_home/workflow-libs/keycloak-lib/vars/keycloakUser.groovy'
                    keycloakGroup = load '/var/jenkins_home/workflow-libs/keycloak-lib/vars/keycloakGroup.groovy'
                    keycloakClient = load '/var/jenkins_home/workflow-libs/keycloak-lib/vars/keycloakClient.groovy'
                    keycloakAudit = load '/var/jenkins_home/workflow-libs/keycloak-lib/vars/keycloakAudit.groovy'
                    echo "âœ… Keycloak library loaded successfully"
                }
            }
        }
        
        stage('Setup') {
            steps {
                script {
                    echo "ğŸ”§ Setting up audit environment..."
                    sh "mkdir -p ${env.REPORT_DIR}"
                    echo "âœ… Report directory created: ${env.REPORT_DIR}"
                }
            }
        }
        
        stage('Get Access Token') {
            steps {
                script {
                    echo "ğŸ” Obtaining Keycloak access token..."
                    env.ACCESS_TOKEN = keycloakAuth.getServiceAccountToken(
                        keycloakUrl: env.KC_URL_INTERNAL,
                        clientId: env.KC_CLIENT_ID,
                        clientSecret: env.KC_CLIENT_SECRET
                    )
                    echo "âœ… Access token obtained"
                }
            }
        }
        
        stage('Audit: Unverified Emails') {
            steps {
                script {
                    echo "ğŸ” Checking for users with unverified emails..."
                    env.UNVERIFIED_USERS = keycloakAudit.detectUnverifiedEmails(
                        accessToken: env.ACCESS_TOKEN
                    )
                    
                    def count = env.UNVERIFIED_USERS.size()
                    echo "ğŸ“Š Result: ${count} users with unverified emails"
                    
                    if (count > params.UNVERIFIED_EMAIL_THRESHOLD.toInteger()) {
                        echo "âš ï¸  WARNING: Threshold exceeded (${params.UNVERIFIED_EMAIL_THRESHOLD})"
                    }
                }
            }
        }
        
        stage('Audit: Inactive Users') {
            steps {
                script {
                    echo "ğŸ” Checking for inactive users (>${params.INACTIVE_DAYS_THRESHOLD} days)..."
                    env.INACTIVE_USERS = keycloakAudit.detectInactiveUsers(
                        accessToken: env.ACCESS_TOKEN,
                        inactiveDays: params.INACTIVE_DAYS_THRESHOLD.toInteger()
                    )
                    
                    def count = env.INACTIVE_USERS.size()
                    echo "ğŸ“Š Result: ${count} inactive users"
                    
                    if (count > params.INACTIVE_USERS_THRESHOLD.toInteger()) {
                        echo "âš ï¸  WARNING: Threshold exceeded (${params.INACTIVE_USERS_THRESHOLD})"
                    }
                }
            }
        }
        
        stage('Audit: Disabled Users') {
            steps {
                script {
                    echo "ğŸ” Checking for disabled users..."
                    env.DISABLED_USERS = keycloakAudit.detectDisabledUsers(
                        accessToken: env.ACCESS_TOKEN
                    )
                    
                    def count = env.DISABLED_USERS.size()
                    echo "ğŸ“Š Result: ${count} disabled users"
                }
            }
        }
        
        stage('Audit: Orphan Groups') {
            steps {
                script {
                    echo "ğŸ” Checking for orphan groups (no members)..."
                    env.ORPHAN_GROUPS = keycloakGroup.detectOrphanGroups(
                        accessToken: env.ACCESS_TOKEN
                    )
                    
                    def count = env.ORPHAN_GROUPS.size()
                    echo "ğŸ“Š Result: ${count} orphan groups"
                }
            }
        }
        
        stage('Audit: Service Accounts') {
            steps {
                script {
                    echo "ğŸ” Checking service accounts..."
                    def clients = keycloakClient.listClients(
                        accessToken: env.ACCESS_TOKEN
                    )
                    
                    env.SERVICE_ACCOUNTS = clients.findAll { it.serviceAccountsEnabled }
                    def count = env.SERVICE_ACCOUNTS.size()
                    echo "ğŸ“Š Result: ${count} service accounts"
                }
            }
        }
        
        stage('Generate Reports') {
            steps {
                script {
                    echo "ğŸ“ Generating audit reports..."
                    echo "=" * 80
                    
                    def auditResults = [
                        unverifiedEmails: env.UNVERIFIED_USERS.size(),
                        unverifiedEmailsList: env.UNVERIFIED_USERS,
                        inactiveUsers: env.INACTIVE_USERS.size(),
                        inactiveUsersList: env.INACTIVE_USERS,
                        disabledUsers: env.DISABLED_USERS.size(),
                        disabledUsersList: env.DISABLED_USERS,
                        orphanGroups: env.ORPHAN_GROUPS.size(),
                        orphanGroupsList: env.ORPHAN_GROUPS,
                        serviceAccounts: env.SERVICE_ACCOUNTS.size(),
                        timestamp: new Date().format("yyyy-MM-dd HH:mm:ss"),
                        realm: params.REALM
                    ]
                    
                    // Generate HTML Report
                    if (params.REPORT_FORMAT in ['HTML', 'ALL']) {
                        echo "ğŸ“„ Generating HTML report..."
                        def htmlReport = keycloakAudit.generateSecurityReport(
                            auditResults: auditResults
                        )
                        writeFile file: "${env.REPORT_DIR}/security-audit-report.html", text: htmlReport
                        echo "âœ… HTML report generated"
                    }
                    
                    // Generate JSON Report
                    if (params.REPORT_FORMAT in ['JSON', 'ALL']) {
                        echo "ğŸ“„ Generating JSON report..."
                        def jsonReport = groovy.json.JsonOutput.toJson(auditResults)
                        def jsonPretty = groovy.json.JsonOutput.prettyPrint(jsonReport)
                        writeFile file: "${env.REPORT_DIR}/security-audit-report.json", text: jsonPretty
                        echo "âœ… JSON report generated"
                    }
                    
                    // Generate CSV Report
                    if (params.REPORT_FORMAT in ['CSV', 'ALL']) {
                        echo "ğŸ“„ Generating CSV report..."
                        def csv = generateCSVReport(auditResults)
                        writeFile file: "${env.REPORT_DIR}/security-audit-report.csv", text: csv
                        echo "âœ… CSV report generated"
                    }
                    
                    echo "=" * 80
                    echo "âœ… All reports generated successfully"
                }
            }
        }
        
        stage('Display Summary') {
            steps {
                script {
                    echo ""
                    echo "=" * 80
                    echo "ğŸ”’ SECURITY AUDIT SUMMARY"
                    echo "=" * 80
                    echo "ğŸ“… Date: ${new Date().format('yyyy-MM-dd HH:mm:ss')}"
                    echo "ğŸ¢ Realm: ${params.REALM}"
                    echo ""
                    echo "ğŸ“Š FINDINGS:"
                    echo "  â€¢ Unverified Emails: ${env.UNVERIFIED_USERS.size()}"
                    echo "  â€¢ Inactive Users: ${env.INACTIVE_USERS.size()} (>${params.INACTIVE_DAYS_THRESHOLD}d)"
                    echo "  â€¢ Disabled Users: ${env.DISABLED_USERS.size()}"
                    echo "  â€¢ Orphan Groups: ${env.ORPHAN_GROUPS.size()}"
                    echo "  â€¢ Service Accounts: ${env.SERVICE_ACCOUNTS.size()}"
                    echo ""
                    
                    def criticalIssues = 0
                    if (env.UNVERIFIED_USERS.size() > params.UNVERIFIED_EMAIL_THRESHOLD.toInteger()) {
                        echo "âš ï¸  CRITICAL: Unverified emails exceed threshold!"
                        criticalIssues++
                    }
                    if (env.INACTIVE_USERS.size() > params.INACTIVE_USERS_THRESHOLD.toInteger()) {
                        echo "âš ï¸  CRITICAL: Inactive users exceed threshold!"
                        criticalIssues++
                    }
                    
                    if (criticalIssues > 0) {
                        echo ""
                        echo "âŒ ${criticalIssues} CRITICAL ISSUE(S) DETECTED!"
                        currentBuild.result = 'UNSTABLE'
                    } else {
                        echo "âœ… No critical issues detected"
                    }
                    
                    echo "=" * 80
                    echo "ğŸ“ Reports saved to: ${env.REPORT_DIR}"
                    echo "=" * 80
                }
            }
        }
    }
    
    post {
        always {
            script {
                // Archive reports
                archiveArtifacts artifacts: 'reports/**/*', allowEmptyArchive: true
                
                // Publish HTML report if available
                if (fileExists("${env.REPORT_DIR}/security-audit-report.html")) {
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'reports',
                        reportFiles: 'security-audit-report.html',
                        reportName: 'Security Audit Report'
                    ])
                }
                
                // Clean sensitive data
                env.ACCESS_TOKEN = null
            }
        }
        success {
            echo "ğŸ‰ Security audit completed successfully!"
        }
        unstable {
            script {
                echo "âš ï¸  Security audit completed with warnings!"
                
                // Send email alerts if enabled
                if (params.SEND_EMAIL_ALERTS) {
                    echo "ğŸ“§ Sending email alerts... (email configuration required)"
                }
            }
        }
        failure {
            echo "âŒ Security audit failed!"
        }
    }
}

/**
 * Generate CSV report from audit results
 */
def generateCSVReport(auditResults) {
    def csv = new StringBuilder()
    
    // Summary section
    csv.append("SECURITY AUDIT SUMMARY\n")
    csv.append("Timestamp,${auditResults.timestamp}\n")
    csv.append("Realm,${auditResults.realm}\n")
    csv.append("\n")
    csv.append("Category,Count\n")
    csv.append("Unverified Emails,${auditResults.unverifiedEmails}\n")
    csv.append("Inactive Users,${auditResults.inactiveUsers}\n")
    csv.append("Disabled Users,${auditResults.disabledUsers}\n")
    csv.append("Orphan Groups,${auditResults.orphanGroups}\n")
    csv.append("Service Accounts,${auditResults.serviceAccounts}\n")
    csv.append("\n")
    
    // Unverified emails detail
    if (auditResults.unverifiedEmailsList.size() > 0) {
        csv.append("UNVERIFIED EMAILS\n")
        csv.append("Username,Email,First Name,Last Name,Enabled\n")
        auditResults.unverifiedEmailsList.each { user ->
            csv.append("${user.username},${user.email ?: ''},${user.firstName ?: ''},${user.lastName ?: ''},${user.enabled}\n")
        }
        csv.append("\n")
    }
    
    // Inactive users detail
    if (auditResults.inactiveUsersList.size() > 0) {
        csv.append("INACTIVE USERS\n")
        csv.append("Username,Email,First Name,Last Name,Enabled\n")
        auditResults.inactiveUsersList.each { user ->
            csv.append("${user.username},${user.email ?: ''},${user.firstName ?: ''},${user.lastName ?: ''},${user.enabled}\n")
        }
        csv.append("\n")
    }
    
    return csv.toString()
}
