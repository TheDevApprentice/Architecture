{
  "realm": "internal",
  "enabled": true,
  "displayName": "Internal",
  "displayNameHtml": "Internal <small>SSO</small>",
  "attributes": {
    "frontendUrl": ""
  },
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "loginTheme": "keycloak.v2",
  "accountTheme": "keycloak.v3",
  "adminTheme": "keycloak.v2",
  "emailTheme": "keycloak",

  "roles": {
    "realm": [
      {
        "name": "config_service",
        "description": "Access to configure internal services"
      },
      {
        "name": "view_service",
        "description": "View-only access to internal services"
      }
    ],
    "client": {
      "jenkins": [
        { "name": "admin", "description": "Jenkins administrators" },
        { "name": "user", "description": "Jenkins standard users" }
      ]
    }
  },

  "groups": [
    {
      "name": "IT",
      "realmRoles": ["config_service", "view_service"],
      "clientRoles": {
        "account": [
          "view-profile",
          "manage-account",
          "view-applications"
        ],
        "jenkins": [
          "admin"
        ]
      }
    },
    {
      "name": "Jenkins",
      "realmRoles": ["view_service"],
      "clientRoles": {
        "account": [
          "view-profile",
          "manage-account",
          "view-applications"
        ],
        "jenkins": [
          "user"
        ]
      }
    }
  ],

  "clients": [
    {
      "clientId": "jenkins",
      "name": "Jenkins",
      "protocol": "openid-connect",
      "publicClient": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": false,
      "serviceAccountsEnabled": false,
      "rootUrl": "http://jenkins.${HOST}",
      "baseUrl": "http://jenkins.${HOST}",
      "redirectUris": [
        "http://jenkins.${HOST}/*",
        "http://jenkins.${HOST}/securityRealm/finishLogin",
        "http://jenkins.${HOST}/OicLogout"
      ],
      "webOrigins": ["+"],
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "protocolMappers": [
        {
          "name": "groups",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-group-membership-mapper",
          "consentRequired": false,
          "config": {
            "full.path": "false",
            "id.token.claim": "true",
            "access.token.claim": "true",
            "userinfo.token.claim": "true",
            "claim.name": "groups"
          }
        }
      ]
    }
  ],

  "users": [
    {
      "username": "hugo",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Hugo",
      "lastName": "User",
      "email": "hugo@example.local",
      "credentials": [
        {
          "type": "password",
          "value": "changeMe123!",
          "temporary": true
        }
      ],
      "requiredActions": ["UPDATE_PASSWORD", "UPDATE_PROFILE"],
      "groups": ["IT"]
    },
    {
      "username": "fred",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Frédéric",
      "lastName": "User",
      "email": "fred@example.local",
      "credentials": [
        {
          "type": "password",
          "value": "changeMe123!",
          "temporary": true
        }
      ],
      "requiredActions": ["UPDATE_PASSWORD", "UPDATE_PROFILE"],
      "groups": ["Jenkins"]
    }
  ]
}
